<% if logged_in? %>

<h1><%= current_user.name %>さんのタスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
      <tr>
        <th><%= link_to task.id, task %></th>
        <th><%= task.content %></th>
        <th><%= task.status %></th>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div>
  <%= paginate @tasks %>
</div>

<%= link_to '新規タスクの作成', new_task_path, class: "btn btn-primary" %>

<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>